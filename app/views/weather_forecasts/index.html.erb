<div class="weather-forecast-container">
  <div class="header-section">
    <h1>Weather Forecast</h1>
    <p class="subtitle">Get accurate weather information for any location</p>
  </div>

  <!-- Search Form -->
  <div class="search-section">
    <%= form_with url: search_weather_forecasts_path, method: :get, local: true, class: "weather-search-form" do |form| %>
      <div class="search-input-group">
        <%= form.text_field :address, 
            placeholder: "Enter city, address, or ZIP code", 
            class: "search-input",
            value: params[:address],
            required: true %>
        <%= form.submit class: "search-button" %>
      </div>
    <% end %>
  </div>

  <!-- Weather Display Section -->
  <% if @weather_forecast %>
    <div class="weather-display-section">
      <!-- Current Weather -->
      <div class="current-weather-card">
        <div class="location-info">
          <h2><%= @weather_forecast.address %></h2>
          <% if @from_cache %>
            <span class="cache-indicator">üìã Cached Data</span>
          <% else %>
            <span class="fresh-data-indicator">üîÑ Fresh Data</span>
          <% end %>
        </div>

        <div class="current-conditions">
          <div class="temperature-display">
            <span class="current-temp"><%= @weather_forecast.formatted_current_temperature %></span>
            <span class="condition"><%= @weather_forecast.condition %></span>
          </div>
          
          <div class="temp-range">
            <%= @weather_forecast.formatted_high_low %>
          </div>
        </div>

        <!-- Weather Headline/Alert -->
        <% if @weather_forecast.headline_text.present? %>
          <div class="weather-headline <%= 'alert' if @weather_forecast.has_weather_alert? %>">
            <strong>üì¢ <%= @weather_forecast.headline_text %></strong>
          </div>
        <% end %>

        <!-- Additional Info -->
        <div class="additional-info">
          <% if @weather_forecast.humidity.present? %>
            <span class="info-item">üíß Humidity: <%= @weather_forecast.humidity %>%</span>
          <% end %>
          <% if @weather_forecast.wind_speed.present? %>
            <span class="info-item">üí® Wind: <%= @weather_forecast.wind_speed %> mph</span>
          <% end %>
        </div>
      </div>

      <!-- Forecast Metadata -->
      <div class="forecast-metadata">
        <p class="last-updated">
          Last updated: <%= @weather_forecast.forecast_retrieved_at.strftime('%B %d, %Y at %I:%M %p') %>
        </p>
        <% if @weather_forecast.cached_until %>
          <p class="cache-info">
            Cache expires: <%= @weather_forecast.cached_until.strftime('%I:%M %p') %>
          </p>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- No Weather Data State -->
    <div class="no-weather-state">
      <div class="weather-icon">üå§Ô∏è</div>
      <h3>Ready to check the weather?</h3>
      <p>Enter a location above to get started with your weather forecast.</p>
    </div>
  <% end %>
</div>

<div class="weather-container">
  <% if @forecast_data && @forecast_data.any? %>
    <div class="extended-forecast">
      <% (@forecast_data || []).each do |day| %>
        <div class="forecast-day">
          <div>
            <strong><%= Date.parse(day['date']).strftime('%A, %B %d') %></strong>
          </div>
          
          <div class="temperature-range">
            <span class="high-temp"><%= day['high'].to_i %>¬∞</span>
            <span class="temp-separator">/</span>
            <span class="low-temp"><%= day['low'].to_i %>¬∞</span>
            <span class="temp-unit"><%= day['temperature_unit'] %></span>
          </div>
          
          <div class="day-night-conditions">
            <div class="day-condition">
              <div class="condition-header">Day</div>
              <div class="condition-info">
                <span class="condition-text"><%= day['day_condition'] %></span>
                <% if day['day_has_precipitation'] %>
                  <span class="precipitation-info">
                    (<%= day['day_precipitation_intensity'] %> <%= day['day_precipitation_type'] %>)
                  </span>
                <% end %>
              </div>
              <div class="weather-icon">
                <!-- You can add weather icon based on day['day_icon'] -->
                <span class="icon-placeholder">‚òÄÔ∏è</span>
              </div>
            </div>
            
            <div class="night-condition">
              <div class="condition-header">Night</div>
              <div class="condition-info">
                <span class="condition-text"><%= day['night_condition'] %></span>
                <% if day['night_has_precipitation'] %>
                  <span class="precipitation-info">
                    (<%= day['night_precipitation_intensity'] %> <%= day['night_precipitation_type'] %>)
                  </span>
                <% end %>
              </div>
              <div class="weather-icon">
                <!-- You can add weather icon based on day['night_icon'] -->
                <span class="icon-placeholder">üåô</span>
              </div>
            </div>
          </div>          
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-forecast">
      <p>No forecast data available. Please search for a location.</p>
    </div>
  <% end %>
</div>

