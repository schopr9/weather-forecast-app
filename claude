  Redis.current = Redis.new(
    url: ENV['REDIS_URL'] || 'redis://localhost:6379/0',
    timeout: 1,
    reconnect_attempts: 3,
    reconnect_delay: 0.5,
    reconnect_delay_max: 2.0
  )
